<h2>
    <%= title %>
</h2>
<a href="/suppliers/new" class="btn btn-primary mb-2">Thêm nhà cung cấp</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        <% if (suppliers && suppliers.length) { %>
            <% suppliers.forEach((s, i) => { %>
                <tr>
                    <td>
                        <%= i + 1 %>
                    </td>
                    <td>
                        <%= s.name %>
                    </td>
                    <td>
                        <%= s.address %>
                    </td>
                    <td>
                        <%= s.phone %>
                    </td>
                    <td>
                        <a href="/suppliers/<%= s._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                        <form action="/suppliers/<%= s._id %>/delete" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận xóa?')">Xóa</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5">Chưa có nhà cung cấp nào</td>
                        </tr>
                        <% } %>
    </tbody>
</table>